@model DateTime?
<input id="@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)"
       name="@ViewData.TemplateInfo.GetFullHtmlFieldName(string.Empty)" 
       value="@(Model > DateTime.MinValue || Model.HasValue ? Model.Value.ToString() : null)" />
<script>
    $(document).ready(function () {
        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").kendoDateTimePicker({
            timeFormat: "HH:mm:ss tt",
            format: "dd/MM/yyyy HH:mm:ss tt",
            culture: "es-PE",
            value:''
        });
    });
</script>