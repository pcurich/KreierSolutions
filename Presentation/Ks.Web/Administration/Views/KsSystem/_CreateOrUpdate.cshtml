            @Html.EditorFor(model => model.SslEnabled)
            @Html.ValidationMessageFor(model => model.SslEnabled)
        </td>
    </tr>
    <tr>
        <td class="adminTitle" colspan="2">
            <em>@T("Admin.Configuration.KsSystem.Fields.SslEnabled.Hint2")</em>
        </td>
    </tr>
    <tr id="pnlSecureUrl">
        <td class="adminTitle">
            @Html.KsLabelFor(model => model.SecureUrl):
