@model  LoanModel
@{
    //page title
    ViewBag.Title = T("Admin.Customers.Customers.Loan.AddNew").Text;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-customers.png")" alt="" />
            @T("Admin.Customers.Customers.Loan.AddNew") @Html.ActionLink("(" + T("Admin.Customers.Customers.Loan.BackToCustomer") + ")", "Edit", new { id = Model.CustomerId })
        </div>
        <div class="options">
            @{
                if (Model.IsPostBack)
                {
                    <input type="submit" name="LoanCreate" value="@T("Admin.Common.AddNew")" class="k-button" />
                }
            }

        </div>
    </div>
    @Html.Partial("_CreateOrUpdateLoans", Model)
}




